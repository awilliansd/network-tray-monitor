{
  "name": "network-tray-monitor",
  "version": "1.0.14",
  "description": "Monitoramento de computadores na rede via bandeja do sistema",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "predist": "npm run generate-icons",
    "dist": "electron-builder",
    "generate-icons": "node scripts/generate-icons.js",
    "test": "jest"
  },
  "build": {
    "appId": "com.alessandrowillian.networkmonitor",
    "productName": "Network Tray Monitor",
    "icon": "icons/app.ico",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/app.ico",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        "deb"
      ],
      "icon": "icons/app-2.png",
      "category": "Network",
      "desktop": {
        "entry": {
          "StartupWMClass": "Network Tray Monitor"
        }
      },
      "executableName": "network-tray-monitor",
      "maintainer": "Alessandro Willian <awilliansd@protonmail.com>"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "icons/app.ico",
      "uninstallerIcon": "icons/app.ico"
    },
    "extraResources": [
      {
        "from": "icons/",
        "to": "icons/",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "ping": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "electron": "^39.6.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "sharp": "^0.32.1"
  }
}
